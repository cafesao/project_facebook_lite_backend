{
  "moduleFileExtensions": ["js", "json", "ts"],
  "moduleDirectories": ["node_modules", "src", "test"],
  "roots": ["."],
  "testEnvironment": "node",
  "testRegex": ".controller-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@src(.*)$": "<rootDir>/../../src/$1"
  },
  "displayName": {
    "name": "Controller",
    "color": "yellow"
  }
}
